<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_marginTop="6dip"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <com.weigo.sales.widget.AsyncRoundedImageView
            android:id="@+id/user_item_icon"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="16dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="abc"
            android:textColor="#a4a2b2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:ellipsize="end"
            android:singleLine="false"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:ellipsize="end"
            android:singleLine="false"
            android:text="拿货价:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.weigo.sales.activity.goods.MyGridView
            android:id="@+id/image_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/edit"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_marginRight="7dp"
                android:textSize="18sp"
                android:background="@drawable/button_white_anim"
                android:textColor="@color/black"
                android:text="编辑" />

            <Button
                android:id="@+id/buy"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/button_white_anim"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"
                android:text="购买" />

            <Button
                android:id="@+id/share"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:background="@drawable/button_white_anim"
                android:textColor="@color/black"
                android:textSize="18sp"
                
                android:text="分享" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/grey"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
    </LinearLayout>

</LinearLayout>